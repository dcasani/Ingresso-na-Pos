<h1>Insira os dados de um dos professores que vão recomendar você</h1>

<% form_for [@subscription,@reference_teacher], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :instituicao %><br />
    <%= f.text_field :instituicao %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>  
  <p>
    <%= f.submit 'Adicionar professor' %>
  </p>
<% end %>

